{
    "name": "sofyco/spider-bundle",
    "type": "symfony-bundle",
    "description": "Symfony Spider Bundle",
    "keywords": ["php", "symfony", "crawler", "scraper", "parser"],
    "homepage": "https://github.com/sofyco/spider-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sofiia Korzhova",
            "email": "sofykorzhova@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-simplexml": "*",
        "sofyco/spider": "^2.1.2",
        "symfony/framework-bundle": "^7.1",
        "symfony/http-client": "^7.1",
        "symfony/messenger": "^7.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Sofyco\\Bundle\\SpiderBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sofyco\\Bundle\\SpiderBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
